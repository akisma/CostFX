# Database
DATABASE_URL=postgresql://postgres:CHANGE_THIS_PASSWORD@localhost:5432/restaurant_ai
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_THIS_PASSWORD
POSTGRES_DB=restaurant_ai

# Redis
REDIS_URL=redis://localhost:6379

# API Keys
OPENAI_API_KEY=REQUIRED_SET_YOUR_OPENAI_KEY_HERE
PINECONE_API_KEY=OPTIONAL_SET_IF_USING_PINECONE
PINECONE_ENVIRONMENT=OPTIONAL_SET_IF_USING_PINECONE

# JWT
JWT_SECRET=REQUIRED_GENERATE_STRONG_SECRET_HERE
JWT_EXPIRES_IN=7d

# App Settings
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# Logging
LOG_LEVEL=info
# ==================== POS INTEGRATIONS ====================
# Token Encryption
# Generate a secure 32-byte (256-bit) key for AES-256-GCM encryption
# Example generation: openssl rand -hex 32
TOKEN_ENCRYPTION_KEY=REQUIRED_GENERATE_WITH_OPENSSL_RAND_HEX_32

# Square POS Configuration
# Get credentials from: https://developer.squareup.com/apps
SQUARE_APPLICATION_ID=REQUIRED_YOUR_SQUARE_APP_ID
SQUARE_ACCESS_TOKEN=OPTIONAL_APPLICATION_LEVEL_TOKEN
SQUARE_ENVIRONMENT=sandbox
SQUARE_OAUTH_CLIENT_ID=REQUIRED_YOUR_SQUARE_CLIENT_ID
SQUARE_OAUTH_CLIENT_SECRET=REQUIRED_YOUR_SQUARE_CLIENT_SECRET
SQUARE_OAUTH_REDIRECT_URI=http://localhost:3001/api/pos/square/callback
SQUARE_WEBHOOK_SIGNATURE_KEY=OPTIONAL_FOR_WEBHOOK_VERIFICATION
SQUARE_WEBHOOKS_ENABLED=true

# Toast POS Configuration (Not Yet Implemented)
TOAST_CLIENT_ID=OPTIONAL_NOT_YET_IMPLEMENTED
TOAST_CLIENT_SECRET=OPTIONAL_NOT_YET_IMPLEMENTED
TOAST_ENVIRONMENT=sandbox
TOAST_OAUTH_REDIRECT_URI=http://localhost:3001/api/pos/toast/callback
TOAST_WEBHOOK_SIGNATURE_KEY=OPTIONAL_NOT_YET_IMPLEMENTED
TOAST_WEBHOOKS_ENABLED=false
